<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="DialogBorderStyle" TargetType="{x:Type Border}">
  	<Setter Property="Background" Value="#7B8D0000" />
    <Setter Property="CornerRadius" Value="55" />
    <Setter Property="BorderBrush" Value="#97E2E2E2" />
    <Setter Property="BorderThickness" Value="4" />
    <!--<Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="25"/>
      </Setter.Value>
    </Setter>-->
    <Setter Property="ClipToBounds" Value="False"/>
  </Style>
  <Style x:Key="DialogContentDockStyle" TargetType="{x:Type DockPanel}">
			<Setter Property="Background">
				<Setter.Value>
					<RadialGradientBrush>
						<GradientStop Color="#FFC0BFBF" Offset="1"/>
						<GradientStop Color="White" Offset="0"/>
					</RadialGradientBrush>
				</Setter.Value>
			</Setter>
		</Style>
</ResourceDictionary>