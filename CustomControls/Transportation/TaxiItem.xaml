<UserControl x:Class="CustomControls.Transportation.TaxiItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top">
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock Text="Henderson Taxi Company" x:Name="txbTitle" FontSize="18" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Left" Style="{DynamicResource TaxiItemTitleTextStyle}"/>
        <TextBlock  x:Name="txbDescription" Text="(702) 384-2322" Foreground="Gray" FontSize="12" FontWeight="Bold" Margin="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{DynamicResource TaxiItemNumberTextStyle}"/>
    </StackPanel>
</UserControl>
