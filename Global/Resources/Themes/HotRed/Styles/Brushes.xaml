    <LinearGradientBrush x:Key="DockToolBGBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#AA251B1B" Offset="0.113"/>
        <GradientStop Color="#B1010000" Offset="1"/>
