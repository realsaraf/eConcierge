        <GradientStop Color="#AA450303" Offset="0.096"/>
        <GradientStop Color="#B1010000" Offset="1"/>
        <GradientStop Color="#97200909" Offset="0.819"/>
        <GradientStop Color="#E9430101" Offset="0.044"/>
        <GradientStop Color="#8A350909" Offset="0.98"/>
        <GradientStop Color="#963B1515" Offset="0.418"/>
        <GradientStop Color="#614F2626" Offset="0.241"/>
