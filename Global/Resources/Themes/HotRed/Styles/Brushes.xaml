	<ControlTemplate x:Key="MenuButtonControlTemplate" TargetType="{x:Type Button}">
			<Border BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="8" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
				<!--<Border.Effect>
					<DropShadowEffect ShadowDepth="0" BlurRadius="41"/>
				</Border.Effect>-->
				<Border.BorderBrush>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FF2F2F01" Offset="0"/>
						<GradientStop Color="#FFFCFC9D" Offset="0.551"/>
					</LinearGradientBrush>
				</Border.BorderBrush>
				<Border.Background>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FFA7A900" Offset="0"/>
						<GradientStop Color="#FFFFFFA2" Offset="1"/>
					</LinearGradientBrush>
				</Border.Background>
				<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8"/>
			</Border>
		</ControlTemplate>
</ResourceDictionary>